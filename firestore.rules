rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Chat history - users can read/write their own chats
      match /chats/{chatId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Saved projects and project chats
      match /savedProjects/{projectId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Saved analysis results - users can read/write their own results
      match /results/{resultId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Analysis results - users can read/write their own results
    match /analyses/{analysisId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
